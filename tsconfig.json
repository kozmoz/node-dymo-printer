{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext"],
    "outDir": "dist",
    "rootDir": "src",

    /* Strict Checking */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,

    /* Interop & Helpers */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": true,

    /* Miscellaneous */
    "pretty": true,
    "allowJs": true,
    "types": ["node"]
  },
  "compileOnSave": false,
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
